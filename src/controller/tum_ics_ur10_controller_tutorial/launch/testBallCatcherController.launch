<?xml version="1.0"?>

<launch>

  <!-- my robot model -->
  <rosparam file="$(find ur10_robot_model)/launch/configs/ur10_model.yaml" command="load" />

  <param name="controller_yaml_path" value="$(find tum_ics_ur10_controller_tutorial)/launch/configs/ball_catcher.yaml" />

  <!-- ur10 settings -->
  <arg name="CONFIG_FILE_PATH" default="$(find tum_ics_ur10_controller_tutorial)/launch/configs/configUR10.ini"/>

  <!-- the controller -->
  <node name="testBallCatcherController" pkg="tum_ics_ur10_controller_tutorial" type="testBallCatcherController" args="$(arg CONFIG_FILE_PATH)" output="screen">
    <!-- internal parameter --> 
    <rosparam file="$(find tum_ics_ur_robot_controllers)/launch/configs/pidInt.yaml" command="load" />
    <!-- controller parameter --> 
    <rosparam file="$(find tum_ics_ur10_controller_tutorial)/launch/configs/ball_catcher_controller.yaml" command="load" /> 
  </node>

</launch>
